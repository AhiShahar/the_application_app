<div class="row">
    <div class="col s6 m6">
        <h3>Your Services:</h3>
    </div>
    <div class="col s6 m6">
        <%= link_to "Add Service", new_appointment_type_path, :class => "right waves-effect waves-light btn blue lighten-3" %>
    </div>
</div>
<div class="row">
    <% @appointment_types.each do |app| %>
    <div class="collection col s12 m6">
        <%= link_to user_path(app.user.id), :class => "collection-item" do %>
        <span class="badge"><%= app.name %></span>Service:
        <% end %>
        <%= link_to user_path(app.user.id), :class => "collection-item" do %>
        <span class="badge"><%= app.description %></span>Description:
        <% end %>
        <%= link_to user_path(app.user.id), :class => "collection-item" do %>
        <span class="badge"><%= app.duration %></span>Duration:
        <% end %>
        <%= link_to user_path(app.user.id), :class => "collection-item" do %>
        <span class="badge"><%= app.user.first_name %></span>By:
        <% end %>
        <div class="row collection-item">
            <span>
                <%= link_to "Update Service Details", edit_appointment_type_path, :class => "col s12 m6 right waves-effect waves-light btn blue lighten-2" %>
            </span>
            <span>
                <%= link_to "Delete Service", appointment_type_path, :method => "Delete", :class => "col s12 m6 right waves-effect waves-light btn blue lighten-2" %>
            </span>
        </div>
    </div>
    <% end %>
</div>
