<div class="row">
    <div class="col s12 m4">
        <h3>Services:</h3>
    </div>
    <div class="col s12 m4">
        <div>
            <div class="nav-wrapper">
                <%= form_tag "/search", :method => "GET" do %>
                <div class="input-field">
                    <%= text_field_tag :search, "", :placeholder => "Search", :required => true %>
                </div>
                <% end %>
            </div>
        </div>
    </div>
    <% if @current_user && @current_user.is_professional? %>
    <div class="col s12 m4">
        <div class="row">
            <div class="col s6 m6">
                <%= link_to "Add Service", new_appointment_type_path, :class => "right waves-effect waves-light btn blue lighten-3" %>
            </div>
            <div class="col s6 m6">
                <%= link_to "My Services", appointment_type_path(@current_user.id), :class => "right waves-effect waves-light btn blue lighten-3" %>
            </div>
        </div>
    </div>
    <% end %>
</div>
<br>
<div class="row">
    <% @appointment_types.each do |app| %>
    <div class="collection col s12 m6">
        <%= link_to user_path(app.user.id), :class => "collection-item" do %>
        <span class="badge"><%= app.name %></span>Service:
        <% end %>
        <%= link_to user_path(app.user.id), :class => "collection-item" do %>
        <span class="badge"><%= app.description %></span>Description:
        <% end %>
        <%= link_to user_path(app.user.id), :class => "collection-item" do %>
        <span class="badge"><%= app.duration %></span>Duration:
        <% end %>
        <%= link_to user_path(app.user.id), :class => "collection-item" do %>
        <span class="badge"><%= app.user.first_name %></span>By:
        <% end %>
    </div>
    <% end %>
</div>
