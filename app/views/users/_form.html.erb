<!-- If the user have any error messages,
  Iterate through all of them
    Print out the messages -->
<% unless @user.errors.full_messages.empty? %>
  <ul>
    <% @user.errors.full_messages.each do |error| %>
      <li>
        <%= error %> !
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@user, :html => {:multipart => true} )do |f| %>
  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :required => true %>
  </p>
  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, :required => true %>
  </p>
  <p>
    <%= f.label :phone %>
    <%= f.text_field :phone, :required => true %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.email_field :email, :required => true %>
  </p>
  <p>
    <%= f.label :image %>
    <%= f.cl_image_upload :image %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password, :required => true %>
  </p>
  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :required => true %>
  </p>
  <p>

    <%= f.check_box :is_professional, {:class => "checkbox"}, "true", "false" %>
    <%= f.label :professional %>
  </p>
  <p>
    <%= f.label :profession %>
    <%= f.text_field :profession %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.cktext_area :description, value: '', id: 'sometext'%>
  </p>

  <%= f.submit %>
  <% if @current_user && @current_user.is_professional == false %>
  <%= link_to "Delete Account", user_path(@current_user), :method => :delete, :data => { :confirm => "Are you sure?" } %>
  <% end %>
<% end %>
